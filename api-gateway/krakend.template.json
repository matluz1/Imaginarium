{
  "version": 3,
  "port": "${API_GATEWAY_PORT}",
  "output_encoding": "json",
  "extra_config": {
    "router": {
      "return_error_msg": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/login",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/api/auth/login",
          "method": "POST",
          "host": ["http://account:${ACCOUNT_PORT}"]
        }
      ]
    },
    {
      "endpoint": "/api/protected",
      "input_headers": ["Cookie"],
      "method": "GET",
      "extra_config": {
        "auth/validator": {
          "alg": "${JWT_ALGORITHM}",
          "jwk_local_path": "symmetric.json",
          "operation_debug": true,
          "disable_jwk_security": true,
          "cache": false
        }
      },
      "backend": [
        {
          "url_pattern": "/api/users/protected",
          "method": "GET",
          "host": ["http://account:${ACCOUNT_PORT}"]
        }
      ]
    }
  ]
}
